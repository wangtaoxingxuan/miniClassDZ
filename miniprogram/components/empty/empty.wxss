/* components/empty/empty.wxss */

.empty-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
}

.empty-content {
  width: 100%;
  text-align: center;
}

.empty-img {
  width: 82rpx;
  height: 94rpx;
}

.empty-txt  {
  margin-top: 30rpx;
  color: #6b808c;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  align-content: center;
}
