/* pages/order/detail/detail.wxss */

.container {
  font-family: PingFangSC-Regular;
}

.empty-container{
  width: 100%;
  margin-top: 400rpx;
}

.order-step {
  font-size: 40rpx;
  font-family: PingFangSC-Semibold;
  color: #000;
  margin-left: 32rpx;
}

.order-address-info {
  display: flex;
  flex-direction: row;
  width: calc(100%-64rpx);
  font-size: 32rpx;
  color: #383b42;
  margin: 10rpx 32rpx 0 32rpx;
}

.divider-one {
  width: calc(100-64rpx);
  height: 1rpx;
  margin: 20rpx 32rpx 0rpx 32rpx;
  border: none;
  border-bottom: 1rpx solid #DFE3E6;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}

.divider{
  width: calc(100-64rpx);
  height: 1rpx;
  margin: 0rpx 32rpx 0rpx 32rpx;
  border: none;
  border-bottom: 1rpx solid #DFE3E6;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}

.goods-container {
  border-radius: 8rpx;
  background-color: #FAFAFA;
  margin: 32rpx;
  padding: 40rpx 32rpx;
}

.goods-item {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}

.goods-item-name {
  display: flex;
  font-size: 32rpx;
  color: #070707;

  /* 超出3行...结尾 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.goods-item-number {
  display: flex;
  font-size: 32rpx;
  color: #6E6E6E;
  margin: 20rpx 0rpx 0rpx 0rpx;

  /* 超出3行...结尾 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-item-price-num {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0rpx 50rpx 0rpx;
  font-size: 32rpx;
  color: #000;
}

.goods-item-price {
  color: #6E6E6E;
}

.goods-item-num {
  margin-left: auto;
  color: #070707;
}

.item-money {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 50rpx;
}

.item-money-left {
  font-size: 32rpx;
  color: #070707;
}

.item-money-right {
  font-size: 32rpx;
  color: #070707;
}

.item-money-right2 {
  font-size: 32rpx;
  color: #FF2741;
}

.item-balance-container {
  display: flex;
  flex-direction: column;
}

.item-balance {
  margin-left: auto;
  border-radius: 8rpx;
  border-color: #6e6e6e;
  border-style: solid;
  border-width: 1px;
  padding: 4rpx 8rpx;
  font-size: 32rpx;
}

.item-eye-remark {
  border-radius: 16rpx;
  background-color: #FAFAFA;
  margin: 32rpx;
  padding: 40rpx 32rpx;
}

.item-eye {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 32rpx;
}

.item-remark {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 32rpx;
  margin-top: 50rpx;
}

.item-eye-more{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: auto;
}

.item-remark-more {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: auto;
}

.item-eye-time {
 margin-right: 20rpx;
}

.item-remark-tip {
  width: 300rpx;
}
.item-remark-content {
  margin-right: 20rpx;
 }

.more-icon{
  width: 16rpx;
  height: 16rpx;
}

.more-info-container {
  border-radius: 16rpx;
  background-color: #FAFAFA;
  margin: 32rpx;
  padding: 40rpx 32rpx;
}

.order-des {
  display: flex;
  flex-direction: row;
  color: #6e6e6e;
  font-size: 32rpx;
  margin-bottom: 50rpx;
}

.order-des2 {
  display: flex;
  flex-direction: row;
  color: #6e6e6e;
  font-size: 32rpx;
}

.order-des-right {
  margin-left: auto;
  font-size: 32rpx;
}

.order-des-right2 {
  margin-left: auto;
  font-size: 32rpx;
  color: #FF2741;
}

.pay-way-container {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: #6e6e6e;
  margin-bottom: 50rpx;
}

.pay-way {
  margin-left: auto;
}

.item-flil-empey {
  height: 200rpx;
}

.comment-btn{
  position:fixed;
  bottom:0;
  width: calc(100% - 64rpx);
  height: 100rpx;
  margin: 0rpx 32rpx 66rpx 32rpx;
  font-size: 32rpx;
  color: #ffffff;
  border-radius: 16rpx;
  background-color: #3B7AFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow:0 0 1rpx 2rpx;
}
